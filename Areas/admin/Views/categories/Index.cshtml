
@model IEnumerable<web12.Models.category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên Sản Phẩm")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.link)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.meta)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.hide)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.order)
        </th>*@
        <th>
            @Html.DisplayName("Ngày Thêm")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.meta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hide)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datebegin)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", routeValues: new { id = item.id }, htmlAttributes: new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "Details", routeValues: new { id = item.id }, htmlAttributes: new { @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", routeValues: new { id = item.id }, htmlAttributes: new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
